{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ProductSettings": {
    "ProductId": "nova.product.template",
    "ProductName": "Nova Product Template",
    "ProductVersion": "1.0.0",
    "EnableAutoUpdate": true,
    "EnableTelemetry": true
  },
  "NovaCore": {
    "ServiceEndpoint": "pipe://Nova.Service.IPC",
    "ConnectionTimeout": 30000,
    "RetryAttempts": 3,
    "RetryDelay": 5000
  },
  "Frontend": {
    "Port": 3000,
    "EnableDevTools": false,
    "AutoStartFrontend": true
  }
} 